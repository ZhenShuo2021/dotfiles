#compdef hnc

# new: filter with regex
_hnc() {
  local -a dirs
  local ignore_pattern='archives|about|tags|categories'
  dirs=(${(f)"$(find ./content -mindepth 1 -maxdepth 1 -type d -exec basename {} \; | grep -v -E $ignore_pattern)"})
  _describe 'directories' dirs -S '/'
}

_hnc


