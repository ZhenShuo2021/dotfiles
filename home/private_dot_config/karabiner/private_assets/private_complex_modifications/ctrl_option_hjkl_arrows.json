{
  "title": "Control+Option HJKL to Arrow Keys",
  "rules": [
      {
          "description": "Ctrl+Option+HJKL to Arrow Keys",
          "manipulators": [
              {
                  "type": "basic",
                  "from": {
                      "key_code": "h",
                      "modifiers": {
                          "mandatory": ["left_control", "left_option"],
                          "optional": ["any"]
                      }
                  },
                  "to": [{"key_code": "left_arrow"}],
                  "conditions": [
                      {
                          "type": "keyboard_type_if",
                          "keyboard_types": ["ansi", "iso", "jis"]
                      }
                  ]
              },
              {
                  "type": "basic",
                  "from": {
                      "key_code": "j",
                      "modifiers": {
                          "mandatory": ["left_control", "left_option"],
                          "optional": ["any"]
                      }
                  },
                  "to": [{"key_code": "down_arrow"}],
                  "conditions": [
                      {
                          "type": "keyboard_type_if",
                          "keyboard_types": ["ansi", "iso", "jis"]
                      }
                  ]
              },
              {
                  "type": "basic",
                  "from": {
                      "key_code": "k",
                      "modifiers": {
                          "mandatory": ["left_control", "left_option"],
                          "optional": ["any"]
                      }
                  },
                  "to": [{"key_code": "up_arrow"}],
                  "conditions": [
                      {
                          "type": "keyboard_type_if",
                          "keyboard_types": ["ansi", "iso", "jis"]
                      }
                  ]
              },
              {
                  "type": "basic",
                  "from": {
                      "key_code": "l",
                      "modifiers": {
                          "mandatory": ["left_control", "left_option"],
                          "optional": ["any"]
                      }
                  },
                  "to": [{"key_code": "right_arrow"}],
                  "conditions": [
                      {
                          "type": "keyboard_type_if",
                          "keyboard_types": ["ansi", "iso", "jis"]
                      }
                  ]
              }
          ]
      },
      {
          "description": "Ctrl+Option+Shift+HJKL to Shifted Arrow Keys",
          "manipulators": [
              {
                  "type": "basic",
                  "from": {
                      "key_code": "h",
                      "modifiers": {
                          "mandatory": ["left_control", "left_option", "left_shift"],
                          "optional": ["any"]
                      }
                  },
                  "to": [{"key_code": "left_arrow", "modifiers": ["left_shift"]}],
                  "conditions": [
                      {
                          "type": "keyboard_type_if",
                          "keyboard_types": ["ansi", "iso", "jis"]
                      }
                  ]
              },
              {
                  "type": "basic",
                  "from": {
                      "key_code": "j",
                      "modifiers": {
                          "mandatory": ["left_control", "left_option", "left_shift"],
                          "optional": ["any"]
                      }
                  },
                  "to": [{"key_code": "down_arrow", "modifiers": ["left_shift"]}],
                  "conditions": [
                      {
                          "type": "keyboard_type_if",
                          "keyboard_types": ["ansi", "iso", "jis"]
                      }
                  ]
              },
              {
                  "type": "basic",
                  "from": {
                      "key_code": "k",
                      "modifiers": {
                          "mandatory": ["left_control", "left_option", "left_shift"],
                          "optional": ["any"]
                      }
                  },
                  "to": [{"key_code": "up_arrow", "modifiers": ["left_shift"]}],
                  "conditions": [
                      {
                          "type": "keyboard_type_if",
                          "keyboard_types": ["ansi", "iso", "jis"]
                      }
                  ]
              },
              {
                  "type": "basic",
                  "from": {
                      "key_code": "l",
                      "modifiers": {
                          "mandatory": ["left_control", "left_option", "left_shift"],
                          "optional": ["any"]
                      }
                  },
                  "to": [{"key_code": "right_arrow", "modifiers": ["left_shift"]}],
                  "conditions": [
                      {
                          "type": "keyboard_type_if",
                          "keyboard_types": ["ansi", "iso", "jis"]
                      }
                  ]
              }
          ]
      }
  ]
}